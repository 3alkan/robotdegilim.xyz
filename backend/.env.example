############################################################
# Example environment file
# Copy to .env and fill in required secrets.
############################################################

# ---------- Email (used by error notifications) ----------
# (Optional) If set, system can send error/status emails.
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_RECIPIENT=info.robotdegilim@gmail.com

# ---------- AWS S3 (required for S3 storage features) ----------
ACCESS_KEY=your_aws_access_key
SECRET_ACCESS_KEY=your_aws_secret_access_key

# ---------- Runtime/API (optional overrides) ----------
#ALLOWED_ORIGINS=*
#LOG_LEVEL=INFO
#LOG_JSON=false
#APP_VERSION=0.1.0

# ---------- HTTP/Retry/Throttling ----------
# Tuning knobs for network resilience. Leave commented to use defaults.
GLOBAL_RETRIES=10
#HTTP_TIMEOUT=15.0
#THROTTLE_SCALE=0.5
#THROTTLE_JITTER=0.25
#FAST_THROTTLE_SCALE=0.1
#SLOW_THROTTLE_SCALE=1.0
#ADAPTIVE_MIN_FACTOR=1.0
#ADAPTIVE_MAX_FACTOR=8.0
#ADAPTIVE_GROW=1.5
#ADAPTIVE_DECAY=1.1
#ADAPTIVE_SUCCESSES_FOR_DECAY=10
#BREAKER_FAIL_THRESHOLD=10
#BREAKER_WINDOW_SIZE=50
#BREAKER_ERROR_RATE_THRESHOLD=0.5
#BREAKER_COOLDOWN_SECONDS=120
#BREAKER_PROBE_INTERVAL_SECONDS=30

# End of example file
