############################################################
# Example environment file (local development)
# Copy this to backend/.env and fill in required secrets.
# Production on Fly: set secrets via `fly secrets set` and use fly.toml [env]
# for non-secret defaults (LOG_LEVEL, LOG_JSON, APP_VERSION, ALLOWED_ORIGINS).
############################################################

# ---------- AWS S3 (required) ----------
ACCESS_KEY=
SECRET_ACCESS_KEY=

# ---------- Email (optional) ----------
# If provided, enables error email alerts.
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_RECIPIENT=info.robotdegilim@gmail.com

# ---------- Runtime/API (optional) ----------
ALLOWED_ORIGINS=*
LOG_LEVEL=INFO
LOG_JSON=false
APP_VERSION=0.1.0

# ---------- HTTP/Retry/Throttling (optional) ----------
HTTP_TIMEOUT=15.0
GLOBAL_RETRIES=10
THROTTLE_SCALE=0.5
THROTTLE_JITTER=0.25
FAST_THROTTLE_SCALE=0.1
SLOW_THROTTLE_SCALE=1.0
ADAPTIVE_MIN_FACTOR=1.0
ADAPTIVE_MAX_FACTOR=8.0
ADAPTIVE_GROW=1.5
ADAPTIVE_DECAY=1.1
ADAPTIVE_SUCCESSES_FOR_DECAY=10
BREAKER_FAIL_THRESHOLD=10
BREAKER_WINDOW_SIZE=50
BREAKER_ERROR_RATE_THRESHOLD=0.5
BREAKER_COOLDOWN_SECONDS=120
BREAKER_PROBE_INTERVAL_SECONDS=30

# End of example file
